<% content_for :pageClasses, 'space' %>

<style>
  .hero {
    background-image: url("/images/spaces/<%= space.image_large %>");
  }
</style>

<div class="container">
    <div class="hero">
      <div class="hero-image"></div>
    </div>
</div>


<div class="container m-b-lg">
  <div class="row">
    <div class="col-md-8">
      <div id="details">
        <div class="space-section">
          <div class="space-header">
            <h1><%= space.name %></h1>
            <p class="text-muted"><%= space.city %></p>
          </div>
        </div>
        <div class="space-section">
          <div class="space-features">
            <div class="row">
              <div class='feature <%= "disabled" if space.hot_desks == "no" %> col-lg-2 col-sm-4 col-xs-4'>
                <img src="/images/icons/hot_desk.svg" class="svg"></img>
                <p class="space-feature-name">Hot Desks</p>
              </div>
              <div class='feature <%= "disabled" if space.dedicated_desks == "no" %> col-lg-2 col-sm-4 col-xs-4'>
                <img src="/images/icons/dedicated_desk.svg" class="svg"></img>
                <p class="space-feature-name">Dedicated Desks</p>
              </div>
              <div class='feature <%= "disabled" if space.private_offices == "no" %> col-lg-2 col-sm-4 col-xs-4'>
                <img src="/images/icons/private_office.svg" class="svg"></img>
                <p class="space-feature-name">Private Offices</p>
              </div>
              <div class='feature <%= "disabled" if space.meeting_rooms == "no" %> col-lg-2 col-sm-4 col-xs-4'>
                <img src="/images/icons/meeting_room.svg" class="svg"></img>
                <p class="space-feature-name">Meeting Rooms</p>
              </div>
              <div class='feature <%= "disabled" if space.lounge == "no" %> col-lg-2 col-sm-4 col-xs-4'>
                <img src="/images/icons/lounge.svg" class="svg"></img>
                <p class="space-feature-name">Lounge</p>
              </div>
              <div class='feature <%= "disabled" if space.standing_desks == "no" %> col-lg-2 col-sm-4 col-xs-4'>
                <img src="/images/icons/standing_desk.svg" class="svg"></img>
                <p class="space-feature-name">Standing Desks</p>
              </div>
            </div>
          </div>
        </div>

        <div class="space-section">
          <h5>About this space</h5>
          <%= space.about %>
        </div>

        <div class="space-section" id="amenities">
          <h5>Amenities</h5>
          <div class="row">
            <div class="col-sm-6">
              <ul>
                <% split_array(space)[0].each do |item| %>
                  <li><%= item %></li>
                <% end %>
              </ul>
            </div>
            <div class="col-sm-6">
              <ul>
                <% split_array(space)[1].each do |item| %>
                  <li><%= item %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>

        <div class="space-section">

          <h5>Description</h5>
          <%= space.description %>
        </div>

        <div class="space-section">
          <h5>Parking</h5>
          <%= space.parking %>
        </div>

        <div class="space-section">
          <h5>Internet</h5>
          <%= space.internet %>
        </div>

        <div class="google-map" id="map"></div>

      </div>
    </div>
    <div class="col-md-4">
      <%= partial "partials/space_side_panel", :locals => { :space => space } %>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://maps.google.com/maps/api/js?sensor=false"></script>

<%= partial "partials/space_scripts", :locals => { :space => space } %>
